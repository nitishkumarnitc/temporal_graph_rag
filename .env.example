# ============================================================================
# DMS Graph RAG Configuration
# ============================================================================

# ============================================================================
# OpenAI Configuration (LLM + Embeddings)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model for entity extraction and reasoning
# Recommended models: gpt-4o, gpt-4o-mini
OPENAI_LLM_MODEL=gpt-4o-mini

# Embedding Model (used for vector search)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIM=1536

# ============================================================================
# Graph Database Configuration (Neo4j)
# ============================================================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=graph_rag

# ============================================================================
# Application Settings
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Data directory
DATA_DIR=./data

# ============================================================================
# Rate Limiting Configuration (useful if you hit OpenAI rate limits)
# ============================================================================
# Set to "true" to enable small delays between API calls in scripts
ENABLE_RATE_LIMIT_DELAY=false

# Delay in milliseconds between API calls (only if ENABLE_RATE_LIMIT_DELAY=true)
# Default: 2000ms (2 seconds)
RATE_LIMIT_DELAY_MS=2000

# Delay in milliseconds between iterations (only if ENABLE_RATE_LIMIT_DELAY=true)
# Default: 3000ms (3 seconds)
RATE_LIMIT_ITERATION_DELAY_MS=3000

